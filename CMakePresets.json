{
    "version": 2,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 19,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "msvc",
        "displayName": "Visual Studio Compiler",
        "description": "Use Visual Studio Compilers",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "cl.exe",
          "CMAKE_CXX_COMPILER": "cl.exe",
          "CMAKE_BUILD_TYPE": "Release"
        }
      }
    ]
}
  